
 <table class = "table">
  <thead>
      <tr>
          <th></th>
          <th>タイトル</th>
          <th>作者</th>
          <th>あらすじ</th>
      </tr>
  </thead>
  <tbody>
   <tr>
    <th>
     <%= link_to @book.item_url do %>
       <%= image_tag @book.small_image_url %>
     <% end %>
    </th>
    <td>
     <%= @book.title %>
    </td>
    <td>
     <%= @book.author %>
    </td>
    <td><%= @book.item_caption %></td>
   </tr>
  </tbody>
 </table>

 <% if @book.bookmarked_by?(current_user) %>
   <%= link_to "ブックマークから外す", deleter_path(book_isbn: @book.isbn), class: "btn btn-sm m-3 btn-danger", method: :delete %>
 <% else %>
   <%= link_to "ブックマーク", bookmark_path(book_isbn: @book.isbn), class: "btn btn-sm m-3 btn-danger", method: :post %>
 <% end %>


<% if user_signed_in? %>





     <%= form_with model: @post, url: creater_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :book_isbn, value: params[:id] %>
      <div class="form-group row" id = "star">
        <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :star, id: :review_star %>
    　</div>
      <script>
    　　　　$('#star').empty();
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        scoreName: 'post[star]',
        half: false,
      });
      </script>
      <div class="form-group row">
        <%= f.label :comment, '口コミ内容 ', class:'col-md-3 col-form-label' %>
        <div class="col-md-5">
          <%= f.text_area :comment, class: "form-control", rows: "6",
            placeholder:'お好きな評価をしてください' %>
        </div>
      </div>
      <%= f.submit '投稿する', class:"btn btn-success" %>
    <% end %>

    <% @posts.each do |post| %>
              <div id="star-rate<%= post.id%>">
              <script>
                $('#star-rate<%= post.id %>').empty();
                $('#star-rate<%= post.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly: true,
                  score: <%= post.star %>,
                });
              </script>
              </div>
              <%= post.comment %>

    <%end%>
<% end %>



